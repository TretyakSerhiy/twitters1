<header class="navbar navbar-inverse fixed-top navbar-dark bg-dark"> <!-- navbar-inverse не работа, але може потом десь йому стилі бутуть -->
  <div class="container">
    <%= link_to "V Tanke", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <div class="d-flex"> <!-- це щоб лішки були в рядок, а не стовпчик -->
          <li class="paddlft"><%= link_to "Home",   root_path %></li>
          <li class="paddlft"><%= link_to "Help",   help_path %></li>
          <% if logged_in? %>
            <li class="paddlft"><%= link_to "Tankists", users_path %></li>
            <li class="dropdown paddlft">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu bg-dark">
                <li class="paddlft"><%= link_to "Profile", current_user %></li>
                <li class="paddlft"><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li class="paddlft">
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="paddlft"><%= link_to "Log in", login_path %></li>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
</header>
