    <header class="navbar navbar-inverse fixed-top navbar-dark bg-dark"> <!-- navbar-inverse не работа, але може потом десь йому стилі бутуть -->
      <div class="container">
        <%= link_to "V Tanke", 'home', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <div class="d-flex"> <!-- це щоб лішки були в рядок, а не стовпчик -->
              <li class="paddlft"><%= link_to "Home",   'home' %></li>
