<%= form_for @post, url: posts_path do |f| %>

  <% if user_signed_in? %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.label :image %><br>
      <%= f.text_field :image %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% else %>
    <p>First <%= link_to "sign in", new_user_session_path %>.</p>
  <% end %>
<% end %>
