<h1>Posts <% current_user %></h1>
<%= link_to 'New post', posts_new_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @post.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', posts_path(post) %></td>
    </tr>
  <% end %>
</table>
